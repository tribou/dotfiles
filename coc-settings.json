{
  "suggest.noselect": true,
  "suggest.enablePreview": true,
  "coc.preferences.hoverTarget": "float",
  "javascript.updateImportsOnFileMove.enable": false,
  "typescript.updateImportsOnFileMove.enable": false,
  "suggest.timeout": 10000,
  "languageserver": {
    "bash": {
      "command": "bash-language-server",
      "args": ["start"],
      "filetypes": ["sh"],
      "ignoredRootPaths": ["~"]
    },
    "elixirLS": {
      "command": "~/dev/elixir-ls/rel/language_server.sh",
      "filetypes": ["elixir", "eelixir"]
    },
    "golang": {
      "command": "gopls",
      "rootPatterns": ["go.mod"],
      "filetypes": ["go"]
    },
    "groovy": {
      "command": "java",
      "args": [
        "-jar",
        "~/dev/groovy-language-server/build/libs/groovy-language-server-all.jar"
      ],
      "filetypes": ["groovy"]
    },
    "intelephense": {
      "command": "intelephense",
      "args": ["--stdio"],
      "filetypes": ["php"],
      "initializationOptions": {
        "storagePath": "/tmp/intelephense"
      }
    }
  }
}
